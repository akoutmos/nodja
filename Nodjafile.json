{
    "variables": {
        "uglify_flags": "--screwie8 --mangle --compress"
    },

    "rules": {
        "uglifyjs": "jshint $in && uglifyjs $in --output $out --source-map $out.map ${uglify_flags}",
        "clean": "rm -rf build"
    },

    "build_statements": [
        {
            "input": "test_files/test{1,2}.js",
            "output": "build/test12.min.js",
            "rule": "uglifyjs",
            "default": true
        },
        {
            "input": "test_files/test3.js",
            "output": "build/test3.min.js",
            "rule": "uglifyjs",
            "default": true
        },
        {
            "input": "",
            "output": "clean",
            "rule": "clean"
        }
    ],

    "phony": {

    }
}
